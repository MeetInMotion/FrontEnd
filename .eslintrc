{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true    
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:mocha/recommended"],
  "plugins": [
    "react",
    "mocha"
  ],
  
  "rules": {
    "semi": 2,  
  },
  
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
